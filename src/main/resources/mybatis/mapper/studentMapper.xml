<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.bokecc.boot.mapper.StudentMapper">
    <!--mybatis默认开启自动映射功能-->
    <resultMap id="studentMap" type="student">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="sex" property="sex"/>
        <result column="note" property="note"/>
        <collection property="roleList" column="id" select="com.bokecc.boot.mapper.RoleMapper.findByStudentId"/>
    </resultMap>
    <sql id="base_column">
        id,name,note
    </sql>
    <select id="findStudentByName" parameterType="String" resultMap="studentMap">
        select
        <include refid="base_column"/>
        from t_student where name = #{name}
    </select>
</mapper>